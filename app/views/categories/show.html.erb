<h1>Show Category</h1>

<div class="categories">
  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <h2><%= @category.name %> </h2>
        <p>Explore our latest products from around the world.</p>
      </div>
      <div class="col-md-8">
        <%= puts @category.products %>
        <% @category.products.in_groups_of(3).each do |products| %>
          <div class='row'>
            <% products.compact.each do |product| %>
              <div class='col-md-4'>
                <div class="thumbnail">
                    <img src= <%= product.thumburl %> >
                    <div class="caption">
                      <span class="listing-title"><%= product.product_name %></span>
                      <span class="listing-price"><%= number_to_currency(product.price) %></span>
                      <span><%= link_to "Edit", edit_product_path(product.id) %></span>
                      <span><%= link_to "Delete", products_delete_path(:id => product.id) %></span>
                    </div>
                  </div>
              </div>
            <% end %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>

<br><%= link_to 'Destroy', @category, method: :delete, data: { confirm: 'Are you sure?' } %>